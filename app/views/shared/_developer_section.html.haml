%h3 We love developers!
%fieldset.code-section
  %legend Get the gem from Github!
  = coderay('git clone git@github.com:Randuin/bucketer.git')
  = coderay('cd bucketer')
  = coderay('bundle install')
  = coderay('rake install')

%fieldset.code-section
  %legend Use the gem!
  = coderay('require "bucketer"', :ruby)
  = coderay('comparer = Bucketer::Comparer.new 3, 5, 4', :ruby)
  = coderay('comparer.steps', :ruby)
  = coderay('=> [[3, 0], [0, 3], [3, 3], [1, 5], [0, 1], [3, 1], [0, 4]]', :ruby)
