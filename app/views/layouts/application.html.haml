  %head
    %title BucketerWebapp
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'shared/github_ribbon'
    .container
      - # TODO: This looks pretty ugly, extract into helper or partial
      - if alert || notice
        .row
